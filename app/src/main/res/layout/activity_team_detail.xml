<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@android:color/holo_red_light"
    android:id="@+id/teamDetailMainLL"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TeamDetailActivity"
    android:orientation="vertical">

    <LinearLayout android:orientation="horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content">
        <TextView android:textSize="20.0sp" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="id" />
        <EditText android:textAppearance="?android:textAppearanceLarge" android:textSize="20.0sp" android:id="@+id/IdEt" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:inputType="text" />
    </LinearLayout>

    <LinearLayout android:orientation="horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content">
        <TextView android:textSize="20.0sp" android:padding="10.0sp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="City" />
        <EditText android:id="@+id/cityEt" android:textSize="20.0sp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:hint="City" android:maxLength="8" android:inputType="text" />
    </LinearLayout>

    <LinearLayout android:orientation="horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content">
        <TextView android:textSize="20.0sp" android:padding="10.0sp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Name" />
        <EditText android:id="@+id/nameEt" android:textSize="20.0sp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:hint="Name" android:maxLength="8" android:inputType="text" />
    </LinearLayout>

    <LinearLayout android:orientation="horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content">
        <TextView android:textSize="20.0sp" android:padding="10.0sp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Sport" />
        <Spinner android:id="@+id/sportSpinner" android:layout_width="wrap_content" android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout android:orientation="horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content">
        <TextView android:textSize="20.0sp" android:padding="10.0sp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="MVP" />
        <EditText android:id="@+id/mvpEt" android:textSize="20.0sp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:hint="MVP" android:maxLength="8" android:inputType="text" />
    </LinearLayout>

    <LinearLayout android:orientation="horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content">
        <ImageView android:id="@+id/imgUpload" android:layout_width="150.0dip" android:layout_height="150.0dip" android:contentDescription="Image" />
        <Button android:id="@+id/uploadImgBtn" android:textSize="20.0sp" android:textColor="#000000" android:layout_gravity="center" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Upload Image" style="?android:buttonBarButtonStyle" />
    </LinearLayout>

    <LinearLayout android:id="@+id/buttonsLL" android:orientation="horizontal" android:background="@android:color/holo_blue_dark" android:layout_width="match_parent" android:layout_height="match_parent">
        <Button android:id="@+id/submitDBtn" android:layout_width="wrap_content" android:layout_height="wrap_content" android:textSize="20.0sp" android:textColor="#000000" android:text="Submit" style="?android:buttonBarButtonStyle" />
        <Button android:id="@+id/updateDBtn" android:layout_width="wrap_content" android:layout_height="wrap_content" android:textSize="20.0sp" android:text="Update" android:textColor="#000000" style="?android:buttonBarButtonStyle" />
        <Button android:id="@+id/deleteDBtn" android:layout_width="wrap_content" android:layout_height="wrap_content" android:textSize="20.0sp" android:textColor="#000000" android:text="Delete" style="?android:buttonBarButtonStyle" />
        <Button android:id="@+id/exitDBtn" android:layout_width="wrap_content" android:layout_height="wrap_content" android:textSize="20.0sp" android:textColor="#000000" android:text="Exit" style="?android:buttonBarButtonStyle" />
    </LinearLayout>

</LinearLayout>